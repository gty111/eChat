<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:singleLine="true"
        android:text="user"
        android:textSize="18sp"
        android:textStyle="bold" />


    <com.cxd.chatview.moudle.ChatView
        android:id="@+id/charview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"


        app:arrow_direction="left"
        app:arrow_height="12dp"
        app:arrow_up_distance="10dp"
        app:arrow_width="5dp"
        app:conner_radius="6dp"
        app:fill_color="@color/white"
        app:is_arrow_center="true"
        app:press_fill_color="#50111111"
        app:press_stroke_color="#50111111"
        app:stroke_color="#FFFFFF"
        app:stroke_width="1px">

        <TextView
            android:id="@+id/content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="这是箭头向左的聊天气泡fdsfsdfsdfsdfsdfsdfsdfsddsffsdfsdfsdf"
            android:textColor="#4a4a4a"
            android:textSize="20sp" />
    </com.cxd.chatview.moudle.ChatView>

</LinearLayout>